<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to 'Show', list_item_path(@list, item) %></td>
        <td><%= link_to 'Edit', edit_list_item_path(@list, item) %></td>
        <td><%= link_to 'Destroy', list_item_path(@list, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>